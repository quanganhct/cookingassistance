<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corner"
    android:padding="4dip">
    <TextView
        android:id="@+id/cooking_step_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:text="content go here" />

    <com.nguyenquanganh.cookingassistance.uiassistance.TimerButtonControl
        android:id="@+id/button_timer"
        android:padding="4dip"
        android:layout_width="90dip"
        android:layout_height="wrap_content"
        android:layout_below="@id/cooking_step_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/timer_button"
        android:enabled="false"/>


    <Button
        android:id="@+id/button_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cooking_step_content"
        android:layout_toLeftOf="@id/button_timer"
        android:layout_alignParentBottom="true"
        android:padding="4dip"
        android:layout_marginLeft="4dip"
        android:layout_marginRight="4dip"
        android:enabled="false"
        android:background="@drawable/skip_button"/>


    <TextView
        android:id="@+id/cooking_timer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="clock go here"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/button_skip"
        android:padding="4dip"
        android:layout_below="@id/cooking_step_content"/>



</RelativeLayout>